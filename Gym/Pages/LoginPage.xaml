<Window x:Class="Gym.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gym"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="550" ResizeMode="NoResize"  SizeToContent="WidthAndHeight" >
    <Grid Margin="10,10,10,10">
        <TextBox Name="LoginTextBox" Text="Логин" Margin="0,40,0,0" TextWrapping="Wrap" Background="White"
                 FontSize="16" Foreground="#FFB5AEAE" HorizontalAlignment="Center" Width="404" Height="28"
                 VerticalAlignment="Top" ToolTip="Логин"/>
        <TextBox Name="PasswordTextBox" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap"
                 Text="Пароль" Background="White" FontSize="16" Foreground="#FFB5AEAE" VerticalAlignment="Top"
                 Width="404" Height="28"  ToolTip="Пароль"/>
        <Button Name="LoginButton" Content="Авторизоваться"
                HorizontalAlignment="Center" VerticalAlignment="Top" Width="404" Height="32" Margin="0,156,0,0"
                FontSize="16" Click="LoginButton_Click"/>
    </Grid>
</Window>
